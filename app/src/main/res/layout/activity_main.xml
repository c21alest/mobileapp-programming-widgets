<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <TextView
        android:id="@+id/input_name_dec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fill_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Namn"
        app:layout_constraintTop_toBottomOf="@id/input_name_dec"
        app:layout_constraintLeft_toLeftOf="@id/input_name_dec"
        app:layout_constraintRight_toRightOf="@id/input_name_dec"
        android:gravity="center"/>

    <Button
        android:id="@+id/search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SÃ¶k"
        app:layout_constraintTop_toBottomOf="@id/input_name"
        app:layout_constraintLeft_toLeftOf="@id/input_name" />

</androidx.constraintlayout.widget.ConstraintLayout>